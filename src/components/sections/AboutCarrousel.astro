--- 
import Container from "../ui/Container.astro"
import Carousel from "../ui/Carousel";
import UnderlinedText from "../ui/UnderlinedText.astro";

const slides = [
  { src: "/images/hero.jpg", alt: "Slide 1" },
  { src: "/images/hero2.jpg", alt: "Slide 2" },
];
---


<section class="py-16 sm:py-20 lg:py-24 bg-[color:var(--color-brand-surface)]/30">
    <Container> 
        <div class="flex flex-col justify-center items-center">
            <UnderlinedText text="Piezas destacadas" />
            <p class="mb-8">Descubrí nuestras promociones y muebles más elegidos.</p>
            <div class="mx-auto max-w-6xl">
                <Carousel slides={slides} client:visible />
            </div>
        </div>
        
    </Container>
</section>