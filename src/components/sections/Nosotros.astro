---
import Container from "../ui/Container.astro";
import PhotoCollage from "../ui/PhotoCollage.astro";
import UnderlinedText from "../ui/UnderlinedText.astro";
---

<section class="py-24 bg-[color:var(--color-brand-surface)]/30">
  <Container> 
    <div class="flex flex-row items-center justify-center gap-8">
      
      <div class="flex w-1/2 flex-col items-center">
        <PhotoCollage
          images={[
            { src: "/images/hero.jpg", alt: "Ambiente 1" },
            { src: "/images/hero2.jpg", alt: "Ambiente 2" },
            { src: "/images/hero.jpg", alt: "Ambiente 3" },
          ]}
        />

        <div class="my-8 flex flex-col gap-4">
          <!-- stats / atributos acá -->
        </div>
      </div>

      <!-- DERECHA: TEXTO ORIGINAL -->
      <div class="flex w-1/2 flex-col items-center justify-center text-center overflow-hidden">
        <p class="py-4 text-md font-medium uppercase tracking-[0.35em] text-[color:var(--color-brand-accent)]-800">
          Un poco de
        </p>

        <UnderlinedText text="Nosotros" size="3xl" />

        <p class="mt-5 max-w-xl text-[color:var(--color-brand-earth)]">
          Modelos ya diseñados, disponibles en distintos colores y combinaciones,
          listos para acompañar tu espacio.
        </p>
      </div>

    </div>
  </Container>
</section>
